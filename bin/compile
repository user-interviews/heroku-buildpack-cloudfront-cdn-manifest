#!/usr/bin/env bash

build_dir=$1
cache_dir=$2
env_dir=$3
bin_dir=$(cd "$(dirname $0)"; pwd)

for import in "$(dirname ${bin_dir})/lib/"*; do
  source "$import"
done

mkdir -p $build_dir/assets-$SOURCE_VERSION/public/assets
mkdir -p $build_dir/assets-$SOURCE_VERSION/public/packs

# Sprockets
download_file assets/manifest-latest.json assets/manifest-latest.json

# Webpacker
download_file packs/manifest.json packs/manifest.json
